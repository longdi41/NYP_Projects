<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="itp231.dba.nyp.com.teamsconqerevents.DisplayProfileActivity" >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Profile picture"
    android:textStyle="bold"/>

<ImageView
    android:layout_width="90dp"
    android:layout_height="55dp"
    android:id="@+id/imageProfile"
    android:src="@drawable/profilepic" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text ="Name"
    android:textStyle="bold"
    android:id="@+id/tvName" />

<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Enter your name"
    android:id="@+id/etName"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gender"
    android:textStyle="bold"
    android:id="@+id/tvGender"/>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Male or Female"
    android:id="@+id/etGender"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date of birth"
    android:textStyle="bold"
    android:id="@+id/tvDate"/>

<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Example: 20 January 1998"
    android:id="@+id/etDate"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hometown"
    android:textStyle="bold"
    android:id="@+id/tvHome"/>

<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Where do you live?"
    android:id="@+id/etHome"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="About you"
    android:textStyle="bold"
    android:id="@+id/tvAbout"/>

<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Tell more about yourself"
    android:id="@+id/etAbout" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Press Create Profile to make your profile"
    android:textStyle="italic"
    android:id="@+id/tvStatus"
    />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:id="@+id/btnCreate"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/btnUpdate"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Data"
        android:id="@+id/btnRetrieve"
        />

</LinearLayout>




</LinearLayout>
